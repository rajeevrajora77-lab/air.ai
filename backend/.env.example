# Server
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database (Use AWS RDS / Railway / PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=airuser
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
POSTGRES_DB=airdb
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis (Use AWS ElastiCache / Railway / Redis)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT (Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=GENERATE_A_STRONG_SECRET_KEY_HERE_64_CHARS
JWT_REFRESH_SECRET=GENERATE_ANOTHER_STRONG_SECRET_KEY_HERE_64_CHARS
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# OpenRouter API
OPENROUTER_API_KEY=your-openrouter-api-key

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info